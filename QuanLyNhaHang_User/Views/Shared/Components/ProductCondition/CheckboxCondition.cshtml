@using Server_QR.Models
@model List<ProductCondition>

<div class="component__product-selector flag__scroll">
    <div>
        <div class="item-selector-header">
            Loại
        </div>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            var checkboxId = item.ProductConditionId;
            <div class="select-item">
                <div class="component__cs-radio">
                    <input class="component__cs-radio--border" type="checkbox" id="@checkboxId" name="OrderInfo.Conditions" value="@item.Condition" />
                    <label class="radio-label" for="@checkboxId">@item.Condition</label>
                </div>
            </div>
        }
    </div>
</div>

